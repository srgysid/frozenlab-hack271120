<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView

        tools:ignore="ContentDescription" android:id="@+id/image"
        android:src="@drawable/ic_round_box_24"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:layout_gravity="center_vertical"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/padding_medium"
        android:layout_width="@dimen/size_icon_medium"
        android:layout_height="@dimen/size_icon_medium" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_toEndOf="@id/image"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            style="@style/AppTheme.TextSmall"
            android:id="@+id/text_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:background="@color/gray_dark"
            android:layout_marginTop="@dimen/padding_tiny"
            android:layout_width="match_parent"
            android:layout_height="@dimen/stroke_width_separator" />

    </LinearLayout>

</RelativeLayout>