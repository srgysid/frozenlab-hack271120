<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/image_logo"
        android:src="@drawable/ic_logo"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/padding_vast"
        android:layout_gravity="center"
        android:layout_width="120dp"
        android:layout_height="120dp" />

    <TextView
        style="@style/AppTheme.Label"
        app:layout_constraintTop_toBottomOf="@id/image_logo"
        android:id="@+id/text_label_version"
        android:text="@string/version"
        android:gravity="center"
        android:layout_marginTop="@dimen/padding_double_big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        style="@style/AppTheme.TextSmall"
        app:layout_constraintTop_toBottomOf="@id/text_label_version"
        android:id="@+id/text_version"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        style="@style/AppTheme.Link"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/text_user_agreement"
        android:text="@string/user_agreement"
        android:textSize="@dimen/text_size_base"
        android:textColor="@color/gray_light"
        android:layout_marginBottom="@dimen/padding_double_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        app:layout_constraintTop_toBottomOf="@id/text_user_agreement"
        app:layout_constraintStart_toStartOf="@id/text_user_agreement"
        app:layout_constraintEnd_toEndOf="@id/text_user_agreement"
        android:background="@color/gray_light"
        android:layout_width="0dp"
        android:layout_height="@dimen/stroke_width_separator" />
    
</androidx.constraintlayout.widget.ConstraintLayout>