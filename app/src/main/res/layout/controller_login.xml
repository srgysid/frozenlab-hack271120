<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--ImageView
            android:src="@drawable/ic_logo_with_title_72dp"
            android:scaleType="fitXY"
            android:contentDescription="@string/cd_logo"
            android:layout_gravity="center"
            android:layout_marginBottom="102dp"
            android:layout_width="108dp"
            android:layout_height="129dp" /-->

        <!-- Phone -->
        <com.frozenlab.ui.widgets.EditableWithLabel
            app:label="@string/label_phone"
            android:id="@+id/editable_phone"
            android:hint="@string/phone"
            android:inputType="phone"
            android:nextFocusDown="@id/editable_password"
            android:layout_marginStart="@dimen/padding_large"
            android:layout_marginEnd="@dimen/padding_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Password -->
        <com.frozenlab.ui.widgets.EditableWithLabel
            app:label="@string/label_password"
            app:endIconMode="password_toggle"
            android:id="@+id/editable_password"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:nextFocusDown="@id/button_sign_in"
            android:layout_marginTop="@dimen/padding_big"
            android:layout_marginStart="@dimen/padding_large"
            android:layout_marginEnd="@dimen/padding_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/AppTheme.Hint"
            android:id="@+id/text_restore_password"
            android:text="@string/ask_forgot_password"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/padding_small"
            android:layout_marginEnd="@dimen/padding_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/AppTheme.Button"
            android:id="@+id/button_sign_in"
            android:text="@string/sign_in"
            android:layout_marginTop="@dimen/padding_very_huge"
            android:layout_marginStart="@dimen/padding_buttons_horizontal"
            android:layout_marginEnd="@dimen/padding_buttons_horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_button"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/padding_big"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                style="@style/AppTheme.Hint"
                android:text="@string/ask_not_have_account"
                android:gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/AppTheme.Link"
                android:id="@+id/text_sign_up"
                android:text="@string/sign_up"
                android:gravity="start"
                android:layout_marginStart="@dimen/padding_tiny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>