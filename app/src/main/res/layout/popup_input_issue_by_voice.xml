<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/cr_popup_card"
    app:cardElevation="@dimen/elevation_card"
    android:layout_gravity="center"
    android:layout_marginStart="@dimen/padding_big"
    android:layout_marginEnd="@dimen/padding_big"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            app:tint="@color/black"
            android:id="@+id/image_close"
            android:src="@drawable/ic_round_close_24"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/padding_medium"
            android:layout_marginHorizontal="@dimen/padding_medium"
            android:layout_width="@dimen/size_icon"
            android:layout_height="@dimen/size_icon" />

        <TextView
            android:id="@+id/text_hold_button"
            android:text="@string/hold_button_to_record"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/padding_medium"
            android:layout_marginHorizontal="@dimen/padding_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/button_record"
            android:src="@drawable/ic_mic_inactive"
            android:background="@color/white"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/padding_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_input_manually"
            android:text="@string/or_input_manually"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/padding_double_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageButton
            app:tint="@color/gray_dark"
            android:id="@+id/button_input"
            android:src="@drawable/ic_round_edit_24"
            android:scaleType="fitXY"
            android:background="@color/white"
            android:padding="6dp"
            android:layout_marginVertical="@dimen/padding_big"
            android:layout_marginHorizontal="@dimen/padding_double_large"
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="60dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>